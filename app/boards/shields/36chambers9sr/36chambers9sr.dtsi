#include <dt-bindings/zmk/matrix_transform.h>
&xiao_serial {
    status = "disabled";
};

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <10>;
		rows = <5>;
// | SW1  | SW2  | SW3  | SW4  | SW5  |   | SW5  | SW4  | SW3  | SW2  | SW1  |
// | SW6  | SW7  | SW8  | SW9  | SW10 |   | SW10 | SW9  | SW8  | SW7  | SW6  |
// | SW11 | SW12 | SW13 | SW14 | SW15 |   | SW15 | SW14 | SW13 | SW12 | SW11 |
// | SW16 |      |      | SW17 | SW18 |   | SW19 | SW19 | SW18 |      | SW16 |
// | U3A  | U3CT | U3C  | U3B  | U3D  |   | SW24 | SW23 | SW22 | SW21 | SW20 |
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)           RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) 
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)           RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) 
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)           RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) 
RC(3,0)         RC(3,2) RC(3,3) RC(3,4)           RC(3,5) RC(3,6) RC(3,7)         RC(3,9) 
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)           RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9)
/*RC(4,1) RC(4,6)*/
		>;
	};
    
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
    col-gpios
        = <&shifter 0 GPIO_ACTIVE_HIGH>  //Col0
        , <&shifter 1 GPIO_ACTIVE_HIGH>   //Col1
        , <&shifter 2 GPIO_ACTIVE_HIGH>   //Col2
        , <&shifter 3 GPIO_ACTIVE_HIGH>   //Col3
        , <&shifter 4 GPIO_ACTIVE_HIGH> //Col4
        ;
	row-gpios
    	= <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>//Row0
        , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>//Row1
        , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>//Row2
        , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>//Row3
        , <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>//Row4
        // , <&shifter 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>//Row5
        ;
    };
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&shifter 7 GPIO_ACTIVE_HIGH>;
        b-gpios = <&shifter 6 GPIO_ACTIVE_HIGH>;
        steps = <80>;
        status = "disabled";
    };
    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&shifter 7 GPIO_ACTIVE_HIGH>;
        b-gpios = <&shifter 6 GPIO_ACTIVE_HIGH>;
        steps = <80>;
        status = "disabled";
    };
};

&xiao_spi {
    status = "okay";
    cs-gpios = <&xiao_d 7 GPIO_ACTIVE_LOW>;
    shifter: 595@0 {
        compatible = "zmk,gpio-595";
        status = "okay";
        gpio-controller;
        spi-max-frequency = <200000>;
        reg = <0>;
        label = "4HC595";
        #gpio-cells = <2>;
        ngpios = <8>;
    };
};
